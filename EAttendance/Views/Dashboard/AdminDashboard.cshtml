@using EAttendance.Models;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Dashboard";
}

      
        <div class="dt-page__header">
            <h1 class="dt-page__title">Admin Dashboard</h1>
        </div>

    

      
        <hr />
       
        <div class="row">

            <div class="col-lg-4 col-sm-6 col-12">

                <!-- Card -->
                <div class="dt-card">

                    <!-- Card Body -->
                    <div class="dt-card__body px-5 py-4">
                        <h5 class="text-body text-uppercase mb-2">Number of Students</h5>
                        <div class="d-flex align-items-baseline mb-4">
                            <span class="display-4 font-weight-500 text-dark mr-2">@ViewBag.AllStudents</span>

                            <div class="d-flex align-items-center">
                                <div class="trending-section font-weight-500 text-success mr-2">
                                    <span class="value">@ViewBag.AllStudents</span>
                                </div>
                                <span class="f-12">This week</span>
                            </div>
                        </div>

                        
                    </div>
                    <!-- /bard body -->

                </div>
                <!-- /card -->

            </div>

            <div class="col-lg-4 col-sm-6 col-12">

                <!-- Card -->
                <div class="dt-card">

                    <!-- Card Body -->
                    <div class="dt-card__body px-5 py-4">
                        <h5 class="text-body text-uppercase mb-2">Number of Staffs</h5>
                        <div class="d-flex align-items-baseline mb-4">
                            <span class="display-4 font-weight-500 text-dark mr-2">@ViewBag.AllStaffs</span>

                            <div class="d-flex align-items-center">
                                <div class="trending-section font-weight-500 text-warning mr-2">
                                    <span class="value">@ViewBag.AllStaffs</span>
                                </div>
                                <span class="f-12">This week</span>
                            </div>
                        </div>

                       
                    </div>
                    <!-- /bard body -->

                </div>
                <!-- /card -->

            </div>

            
        </div>


      
 