@model EAttendance.Models.Staff

@{
    ViewData["Title"] = "Create";
}

<script src="~/js/lga.min.js"></script>
<script src="jquery-1.11.0.min.js" type="text/javascript"></script>
<script src="~/js/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>




<div class="content">
    <div class="container-fluid">
        <div class="col-md-12">
            <!--      Wizard container        -->
            <div class="wizard-container">
                <div class="card card-wizard" data-color="rose" id="wizardProfile">
                    <form asp-action="Create"  enctype="multipart/form-data">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
                        <div class="card-header text-center">
                            <h3 class="card-title">
                                Set up Staff Profile
                            </h3>
                            <h5 class="card-description">This information will let us know more about the Staff.</h5>
                        </div>

                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="about">
                                    <h5 class="info-text"> Let's start with the basic information about the Staff</h5> <br />


                                    <div class="row justify-content-center">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                                    <div class="fileinput-new thumbnail">
                                                        <img src="~/assets/images/image_placeholder.jpg" style="width:50%" alt="..." id="blah">
                                                    </div>
                                                    <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                                    <div>
                                                        <label>Upload Image</label>
                                                        <input type="file"
                                                               onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0]), checkPhoto(this)"
                                                               asp-for="ImageUrl" id="photoInput" required />

                                                        <span class="text-danger" id="photoLabel"></span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="col-sm-6">

                                            <div class="form-group">
                                                <label for="exampleInput1" class="bmd-label-floating">First Name  *</label>
                                                <input class="form-control" id="exampleInput1" asp-for="FirstName" required>
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>


                                            <div class="form-group">
                                                <label for="exampleInput11" class="bmd-label-floating">Last Name *</label>
                                                <input class="form-control" id="exampleInput11" asp-for="Surname" required>
                                                <span asp-validation-for="Surname" class="text-danger"></span>
                                            </div>

                                        </div>

                                        <div class="col-lg-10 mt-3">

                                            <div class="form-group">
                                                <label for="exampleInput1" class="bmd-label-floating">Other Names  *</label>
                                                <input class="form-control" id="exampleInput1" asp-for="Othernames" required>
                                                <span asp-validation-for="Othernames" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-lg-10 mt-3">

                                            <div class="form-group">
                                                <label for="exampleInput1" class="bmd-label-floating">Email *</label>
                                                <input class="form-control" id="exampleemalil" asp-for="Email" required>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>

                                        </div>
                                        <div class="col-lg-10 mt-3">

                                            <div class="form-group">
                                                <label for="exampleInput1" class="bmd-label-floating">Phone  *</label>
                                                <input class="form-control" id="exampleInput1" asp-for="PhoneNo" required>
                                                <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                            </div>

                                        </div>


                                    </div>
                                </div>
                                <h5 class="info-text"> Fill Out All Forms Correctly </h5>
                                <div class="row justify-content-center">
                                    <div class="col-lg-10 mt-3">
                                        <div class="row justify-content-center">
                                            <div class="col-sm-6">



                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Gender *</label>
                                                    @*<input type="text" class="form-control" id="exampleInput1" asp-for="Sex" required>*@
                                                    <select asp-for="Sex" class="custom-select custom-select-sm mb-3" required>
                                                        <option selected>Please Select</option>
                                                        <option>Male</option>
                                                        <option>Female</option>

                                                    </select>
                                                    <span asp-validation-for="Sex" class="text-danger"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Qualification</label>
                                                    <input class="form-control" id="exampleInput1" asp-for="Qualification">
                                                    <span asp-validation-for="Qualification" class="text-danger"></span>
                                                </div>

                                            </div>
                                            <div class="col-sm-6">

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Department  *</label>
                                                    <input class="form-control" id="exampleInput1" asp-for="Department" required>
                                                    <span asp-validation-for="Department" class="text-danger"></span>
                                                </div>

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">StaffNo  *</label>
                                                    <input class="form-control" id="exampleInput1" asp-for="StaffNo" required>
                                                    <span asp-validation-for="StaffNo" class="text-danger"></span>
                                                </div>


                                            </div>

                                        </div>

                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="card-footer">

                            <div class="ml-auto">
                                <input type="submit" id="show" value="Create" class="btn btn-primary" />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- wizard container -->
        </div>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-info">Back to List</a>
</div>


<script src="~/sweetalert/jquery-1.10.2.js"></script>

