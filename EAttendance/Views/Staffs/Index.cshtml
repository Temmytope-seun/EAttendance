@model IEnumerable<EAttendance.Models.Staff>

@{
    ViewData["Title"] = "Index";
    var rowIndex = 1;
}
@{
    if (ViewBag.User == "Admin")
    {


        <h2>List of Staffs</h2>

        <p>
            <a asp-action="Create" class="btn btn-info">Add New Staff</a>
        </p>
        <div class="table-responsive">
            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Othernames)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StaffNo)
                        </th>
                        <th>Department</th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Qualification)
                        </th>
                        
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(rowIndex++)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Othernames)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Qualification)
                            </td>
                           
                           
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.StaffId"><i class="material-icons">edit</i></a> |
                                @*<form asp-action="DeleteConfirmed" asp-route-id="@item.StaffId" method="post">

                                    <button type="submit" onclick="return confirm('Are you sure you want to remove the record : @item.FullName')" title="Delete"><i class="material-icons">delete</i></button>
                                </form>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="content">
            <div class="container-fluid">
                @foreach (var item in Model)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">


                                <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->

                                <div class="card-header card-header-primary card-header-icon">
                                    <div class="card-icon">
                                        <i class="material-icons">assignment</i>
                                    </div>
                                    <h4 class="card-title">Staff Bio-Data</h4>
                                </div>
                                <div class="card-body">
                                    <div class="material-datatables">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">First Name: </label>
                                                @Html.DisplayFor(modelItem => item.FirstName)
                                            </div>
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Last Name: </label>
                                                @Html.DisplayFor(modelItem => item.Surname)
                                            </div>
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Other Names: </label>
                                                @Html.DisplayFor(modelItem => item.Othernames)
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Email: </label>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </div>
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Phone Number: </label>
                                                @Html.DisplayFor(modelItem => item.PhoneNo)
                                            </div>
                                          
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Staff ID: </label>
                                                @Html.DisplayFor(modelItem => item.StaffNo)
                                            </div>
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Department: </label>
                                                @Html.DisplayFor(modelItem => item.Department)
                                            </div>
                                            <div class="col-lg-4">
                                                <label for="exampleInput1" class="bmd-label-floating">Qualification: </label>
                                                @Html.DisplayFor(modelItem => item.Qualification)
                                            </div>
                                        </div>
                                       


                                        <a asp-area="" asp-controller="Staffs" asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-danger" title="Edit"><i class="material-icons">edit</i>Edit Profile</a>

                                       

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
                <!-- wizard container -->
            </div>
        </div>
    }
}